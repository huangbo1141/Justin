<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="au.com.myphysioapp.myphysio.ui.profile.NumberPickerDialogVM"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dialog_vertical_margin"
        android:paddingStart="@dimen/dialog_horizontal_margin"
        android:paddingEnd="@dimen/dialog_horizontal_margin"
        android:paddingBottom="@dimen/dialog_vertical_margin"
        android:orientation="vertical"
        >
        <au.com.myphysioapp.myphysio.widget.LargeTextNumberPicker
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            bind:onValueChangedListener="@{vm::onValueChange}"
            bind:minValue="@{vm.minValue}"
            bind:maxValue="@{vm.maxValue}"
            bind:value="@{vm.value}"
            />
    </LinearLayout>
</layout>
