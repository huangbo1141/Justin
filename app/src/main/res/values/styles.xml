<resources>

    <!-- Base application theme. -->
    <style name="MyPhysioAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="MyPhysioAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyPhysioAppTheme.NoActionBar.SplashScreen">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>
    
    <style name="MyPhysioAppTheme.NoActionBar.WhiteStatusBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text styles -->
    <style name="Text">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/textColorCommon</item>
    </style>

    <style name="Text.ExtraSmall">
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>

    <style name="Text.ExtraSmall.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small.Light">
        <item name="android:textColor">@color/textColorHint</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="Text.Common">
        <item name="android:textSize">@dimen/text_common</item>
    </style>

    <style name="Text.Common.Light">
        <item name="android:textColor">@color/textColorHint</item>
    </style>

    <style name="Text.Common.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Common.Bold.Green">
        <item name="android:textColor">@color/textColorGreen</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Medium.PrimaryBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorGreen</item>
    </style>

    <style name="Text.Big">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HorizontalSep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorSeparatorGrey</item>
    </style>

    <style name="HorizontalSep.WithMargins">
        <item name="android:layout_marginTop">@dimen/common_margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/common_margin_medium</item>
    </style>

    <style name="SingleLineAutoTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/Text.Common</item>
    </style>
    
    <style name="ActivityLevelRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Text.Small</item>
    </style>

    <style name="SideMarginsTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginEnd">@dimen/common_margin_medium</item>
        <item name="android:layout_marginStart">@dimen/common_margin_medium</item>
    </style>

    <style name="SideMarginsTextInputLayout.BiggerMargins" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginEnd">@dimen/common_margin_big</item>
        <item name="android:layout_marginStart">@dimen/common_margin_big</item>
    </style>

    <style name="WhiteOutlinedButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bg_white_button</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/Text.Common.Bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="DecisionButton" parent="@android:style/Widget.Button">
        <item name="android:layout_height">@dimen/decision_btn_height</item>
        <item name="android:drawablePadding">@dimen/decision_btn_drawablePadding</item>
        <item name="android:textAppearance">@style/Text.Common</item>
        <item name="android:textColor">@color/decision_btn_text_color</item>
        <item name="android:paddingStart">@dimen/decision_btn_paddingStart</item>
        <item name="android:paddingEnd">@dimen/decision_btn_paddingEnd</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DecisionButton.AcceptButton">
        <item name="android:drawableStart">@drawable/ic_checkmark_accept</item>
        <item name="android:background">@drawable/bg_accept_button</item>
    </style>

    <style name="DecisionButton.RejectButton">
        <item name="android:drawableStart">@drawable/ic_checkmark_reject</item>
        <item name="android:background">@drawable/bg_reject_button</item>
    </style>

    <style name="DecisionButtonShort" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">@dimen/decision_btnshort_size</item>
        <item name="android:layout_height">@dimen/decision_btnshort_size</item>
        <item name="android:paddingStart">@dimen/decision_btnshort_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/decision_btnshort_horizontal_padding</item>
    </style>

    <style name="WhiteCircularTextView" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/bg_circular_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/circular_element_elevation</item>
        <item name="android:textAppearance">@style/Text.Medium.PrimaryBold</item>
    </style>

    <style name="NoBackgroundImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NoBackgroundImageButton.BigSocialImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">0dp</item>
    </style>



    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
